<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="canFocus"
        android:textAllCaps="false"
        android:id="@+id/touchButton2"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:onClick="onButton2Click"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="closeInputMethod"
        android:textAllCaps="false"
        android:id="@+id/touchButton4"
        android:onClick="onButton4Click"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/touchEditText1"
        android:inputType="textCapSentences|textAutoCorrect"
        android:hint="kind"
        android:imeOptions="actionDone"
       />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/touchEditText2"
        android:hint="multiLine"
        android:inputType="textMultiLine"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onButton1Click"
        android:text="orient"/>


</LinearLayout>